<div class='profile-page__button-panel'>
    <button class='button-panel__button circle'><i class='fa-solid fa-arrow-left'></i></button>
  </div>
  <div class='profile-page__profile'>
    <div class='profile__avatar-container'>
      <div class='avatar-container__avatar circle'>
      </div>
      <h2>{{name}}</h2>
    </div>
    <div class='profile__inputs'>
      {{#each fields}}
        <div class='profile__input-group'>
          <label>{{label}}</label>
          <input class='profile__input' name='{{name}}' type='{{type}}' value='{{this.val}}'>
        </div>
      {{/each}}
    </div>
    <div class='profile__buttons'>
      <button class='buttons__save-button'>{{save_button}}</button>
      <button class='buttons__change-data-button'>{{change_data_button}}</button>
      <button class='buttons__change-password-button'>{{change_password_button}}</button>
      <button class='buttons__exit-button'>{{exit_button}}</button>
    </div>
  </div>
