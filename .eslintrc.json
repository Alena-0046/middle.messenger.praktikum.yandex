{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "google"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": ["tsconfig.json"]
    },
    "rules": {
        "max-len": [1, 150],
        "require-jsdoc": 0,
        "space-before-function-paren": ["error", "always"],
        "@typescript-eslint/consistent-type-definitions": ["error", "type"]
   }
}
